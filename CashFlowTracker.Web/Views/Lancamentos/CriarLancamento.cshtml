@model LancamentoViewModel

<h2>Criar Lançamento</h2>

<form asp-controller="Lancamentos" asp-action="CriarLancamento" method="post">
    <div>
        <label>Valor:</label>
        <input type="number" step="0.01" name="Valor" asp-for="Valor" />
    </div>
    <div>
        <label>Data:</label>
        <input type="date" name="Data" asp-for="Data" />
    </div>
    <div>
        <label>Tipo de Lançamento:</label>
        <select name="Tipo" asp-for="Tipo">
            <option value="Debit">Débito</option>
            <option value="Credit">Crédito</option>
        </select>
    </div>
    <div>
        <label>Categoria:</label>
        <input type="text" name="Categoria" asp-for="Categoria" />
    </div>
    <button type="submit">Salvar</button>
</form>
